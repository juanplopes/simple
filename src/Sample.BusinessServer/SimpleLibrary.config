<?xml version="1.0" encoding="utf-8" ?>
<simpleLibrary>
  <business>
    <interfaceAssembly name="Sample.BusinessInterface"/>
    <serverAssembly name="Sample.BusinessServer"/>
  </business>

  <serviceModel>
    <defaultBaseAddress>http://192.168.1.146:9001/</defaultBaseAddress>
    <serviceConfiguratorType name="SimpleLibrary.ServiceModel.MetadataBehaviorServiceConfigurator, SimpleLibraryCore">
      <address>mex</address>
      <httpGetEnabled>true</httpGetEnabled>
    </serviceConfiguratorType>
    <serviceConfiguratorType name="SimpleLibrary.ServiceModel.SingletonServiceConfigurator, SimpleLibraryCore"/>
    <serviceConfiguratorType name="SimpleLibrary.ServiceModel.ErrorBehaviorServiceConfigurator, SimpleLibraryCore"/>
    <serviceConfiguratorType name="SimpleLibrary.ServiceModel.DebugServiceConfigurator, SimpleLibraryCore" enabled="true"/>

    <defaultEndpoint>
      <address></address>

      <endpointConfiguratorType name="SimpleLibrary.ServiceModel.WSHttpBindingConfigurator, SimpleLibraryCore" weakSecurity="true"/>
      <endpointConfiguratorType name="SimpleLibrary.ServiceModel.DataContractConfigurator, SimpleLibraryCore"/>
      <endpointConfiguratorType name="SimpleLibrary.ServiceModel.DefaultFaultsConfigurator, SimpleLibraryCore"/>
      <endpointConfiguratorType name="SimpleLibrary.ServiceModel.OperationContextConfigurator, SimpleLibraryCore"/>
      <!--<endpointConfiguratorType name="SimpleLibrary.ServiceModel.CredentialsServiceConfigurator, SimpleLibraryCore"/>-->
    </defaultEndpoint>

    <additionalEndpoints/>
  </serviceModel>


  <dataConfig>
    <options mergeBeforeUpdate="false"/>

    <defaultSessionFactory>
      <hibernate-configuration xmlns="urn:nhibernate-configuration-2.2">
        <session-factory>
          <property name="connection.provider">NHibernate.Connection.DriverConnectionProvider</property>
          <property name="connection.driver_class">NHibernate.Driver.SqlClientDriver</property>
          <property name="connection.connection_string">Data Source=localhost\SQLEXPRESS;Integrated Security=true;DataBase=SimpleORMSample</property>
          <property name="dialect">NHibernate.Dialect.MsSql2000Dialect</property>
          <property name="show_sql">false</property>
          <property name="use_outer_join">true</property>
          <mapping assembly="Sample.BusinessServer" />
        </session-factory>
      </hibernate-configuration>
    </defaultSessionFactory>

    <!--<sessionFactory configFile="OtherSession.config" name="otherSession"/>-->
  </dataConfig>
</simpleLibrary>